<!DOCTYPE html>
<html>
	<head>
		<title>SimpleStore</title>
		<!-- <%= stylesheet_link_tag "ss-boxes.css" %> -->
		<%= stylesheet_link_tag :all, :recursive => true %> <!-- <%= stylesheet_link_tag :all %> -->
		<%= javascript_include_tag :defaults %>
		<%= csrf_meta_tag %>
		
	</head>
	<body>
	
	<script language="javascript">
    window.tabs_callback = function(index , string){
      str = string.toLowerCase();
      window.location = "/admin/" + str;
    }; 
    </script>			 
      <%
      	action_name = controller.action_name
      	if !action_name.match("prod").nil?
      		tab_index = 0
      	elsif !action_name.match("cat").nil?
      		tab_index = 1
      	elsif !action_name.match("brand").nil?
      		tab_index = 2
      	else
      		tab_index = 3
      	end
      
      %> 
	  <%= create_main_tabs(tab_index, ["Products", "Categories", "Brands", "Settings"], "window.tabs_callback") %>
	
		<%= yield %>
		
		

	</body>
	
	<div id="footerWrapper">
		<div id="f_footer">
			<p>Copyright Â© 2012 TheKusumaS Inc. All rights reserved.</p>
		</div>
	</div>
</html>
