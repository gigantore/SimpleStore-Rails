<html>
	<head>
		<title>SimpleStore</title> 
		
		<%= stylesheet_link_tag "jquery/jquery-ui/ui-lightness/jquery-ui-1.8.17.custom.css" %>
		<%= stylesheet_link_tag "jquery/apprise/apprise.min.css" %>
		<%= stylesheet_link_tag "jquery/loadmask/jquery.loadmask.css" %>
