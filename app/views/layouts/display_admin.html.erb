	 	<!-- Admin specific -->
		<%= stylesheet_link_tag "display_admin/shared.css" %> 
		 
		 
		<%= csrf_meta_tag %> 
		
		<script language="javascript"> 
			$(document).ready(function(){
				 

				 
			});
		</script>
	</head>
	<body>   
			<%
				tab_names = ["Products","Categories","Store Settings","About Page","My Account"]
				urls = ["/display_admin/products","/display_admin/categories","/display_admin/store_settings","/display_admin/about_page","/display_admin/my_account"]
				selected = (urls.enum_with_index.collect {|url,i| (url.index(controller.action_name) && i) || nil   }).compact[0]
			%>
			
			<%=	main_tab_open ({
					:tab_display_names => tab_names,
					:tab_urls => urls,
					:selected =>  selected	
				})
			%>
				<%=yield%>
			<%= main_tab_close %>
		

	</body>
	 
</html>
