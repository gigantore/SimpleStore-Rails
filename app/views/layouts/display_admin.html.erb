		<script type="text/javascript" src="/javascripts/jquery/jquery-1.7.1.min.js"></script> 
		<script type="text/javascript" src="/javascripts/jquery/jquery-ui-1.8.17.custom.min.js"></script>
		<script type="text/javascript" src="/javascripts/jquery/loadmask/jquery.loadmask.min.js"></script>
		<script type="text/javascript" src="/javascripts/jquery/apprise/apprise-1.5.min.js"></script>
		<script type="text/javascript" src="/javascripts/ajaxwithmask/ajaxwithmask.js"></script>
		<script type="text/javascript" src="/javascripts/imageuploader/FileUploaderRequest.js"></script>
